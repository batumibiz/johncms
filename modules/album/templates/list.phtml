                <a class="user-login mr-2" href="<?= $album['album_url'] ?>"><?= $album['name'] ?></a>
                <span class="badge badge-pill badge-light border ml-3"><?= $album['count_photos'] ?></span>
            </div>
            <?php if (! empty($album['has_edit'])): ?>
                <div>
                    <a href="<?= $album['up_url'] ?>" class="btn btn-secondary btn-sm"><?= _t('Up') ?></a>
                    <a href="<?= $album['down_url'] ?>" class="btn btn-secondary btn-sm"><?= _t('Down') ?></a>
                    <a href="<?= $album['edit_url'] ?>" class="btn btn-secondary btn-sm"><?= _t('Edit') ?></a>
                    <a href="<?= $album['delete_url'] ?>" class="btn btn-secondary btn-sm"><?= _t('Delete') ?></a>
                </div>
            <?php endif; ?>
        </div>
        <?php if (! empty($album['description'])): ?>
            <div class="small pt-2 text-muted">
                <div><?= $album['description'] ?></div>
            </div>
        <?php endif; ?>
    </div>
<?php endforeach; ?>
